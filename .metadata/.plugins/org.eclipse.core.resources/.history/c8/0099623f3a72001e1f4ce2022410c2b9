package java_class;

public class Car {
	//멤버 변수
	private int speed;
	//클래스 명과 동일해야
	public Car(int speed) {
		this.speed = speed;
	}
	public void start() {
		System.out.println("Car Start");
	}
	public void increaseSpeed(int speed) {
		this.speed=this.speed+speed;
	}
	public int getSpeed() {
		return speed;
	}

	public void setSpeed(int speed) {
		if(speed>0) {
			this.speed = speed;			
		}
	}
	
//	//setter메소드 
//	public void setSpeed(int speed) {
//		this.speed=speed;
//	}
//	//getter
//	public int getSpeed() {
//		return this.speed;
//	}
	
	
}
